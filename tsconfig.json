{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "types": [
      "node"
    ],
    "sourceMap": false,
    "removeComments": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./src",
    "paths": {
      "middleware/*": [
        "./middleware/*"
      ],
      "service/*": [
        "./service/*"
      ],
      "utils/*": [
        "./utils/*"
      ],
      "config/*": [
        "./config/*"
      ]
    },
   "plugins": [
      { "transform": "typescript-transform-paths" },
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ]

  },
  "include": [
    "src/**/*.ts"
  ],
  // 包含的文件
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
